{% extends 'base.html.twig' %}


{% block navCenter %}
  <div class = "nav-center
  <form action="/user/filtered" method="POST" name="formulaire"
  <div class="filter-content collapse" id="collapse_aside2" style="">
      <div class="card-body">
          <div class="form-row">
          <div class="form-group col-md-6">
            <label>Min</label>
            <input class="form-control" placeholder="$0" type="number" name = "Min">
          </div>
          <div class="form-group text-right col-md-6">
            <label>Max</label>
            <input class="form-control" placeholder="$1,0000" type="number" name = "Max">
          </div>
          </div>
          <a href="#" class="highlight-button btn btn-medium button xs-margin-bottom-five" data-abc="true">Apply Now</a>
      </div>
  </div>
  </form>
  </div>
{% endblock %}

{% block body %}
    <table class="table table-borderless text-center">
        <tr class = "sticky-top">
            <th class="active text-center">{{knp_pagination_sortable(pagination, 'Nom', 'a.crpt_Name')}}</th>
            <th class="active text-center">{{knp_pagination_sortable(pagination, 'Symbole', 'a.crpt_Symbol')}}</th>
            <th class="active text-center">{{knp_pagination_sortable(pagination, 'Prix', 'a.crpt_Price')}}</th>
            <th class="active text-center">{{knp_pagination_sortable(pagination, 'Market Cap', 'a.crpt_MarketCap')}}</th>
            <th class="active text-center">{{knp_pagination_sortable(pagination, 'Followers', 'a.crpt_TwitterFollowers')}}</th>
        </tr>

        {% for crypto in pagination %}
            <tr>
                <td><a href="#">{{ crypto.CrptName }}</a></td>
                <td>
                    <a href="#">
                        {{ crypto.CrptSymbol }}
                    </a>
                </td>
                <td>{{ crypto.CrptPrice }}</td>
                <td>{{ crypto.CrptMarketCap }}</td>
                <td>{{ crypto.CrptTwitterFollowers }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
