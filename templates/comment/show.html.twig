{% extends 'base.html.twig' %}

{% block title %}{{ 'comment.show.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'comment.show.title'|trans }}</h1>

    <table class="table-show">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{ 'comment.index.date'|trans }}</th>
                <td>{{ comment.comDateTime ? comment.comDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'comment.index.text'|trans }}</th>
                <td>{{ comment.comText }}</td>
            </tr>
        </tbody>
    </table>


    {% if is_granted('ROLE_ADMIN')%}
    <a class="btn btn-primary" href="{{ path('app_comment_index') }}">{{ 'back to list'|trans }}</a>
    {% else %}
    <a class="btn btn-primary" href="{{ path('app_user_index') }}">{{ 'back to list'|trans }}</a>
    {% endif %}


    <a class="btn btn-primary" href="{{ path('app_comment_edit', {'id': comment.id}) }}">{{ 'comment.index.editbtn'|trans }}</a>


    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
